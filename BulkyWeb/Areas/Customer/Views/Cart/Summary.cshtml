@model ShoppingCartViewModel
<div class="container-fluid py-4 mb-5 pb-5">
	<div class="row justify-content-center">
		<div class="col-md-11">
			<form method="post">
				<br />
				<div class="card shadow">
					<div class="card-header bg-primary text-white">
						<h4 class="mb-0 py-2">
							Order Summary
						</h4>
					</div>
					<div class="card-body p-4">
						<div class="container rounded p-3">
							<div class="row">
								<div class="col-12 col-lg-6 pb-4">
									<div class="row mb-4">
										<h4 class="d-flex justify-content-between align-items-center mb-3">
											<span class="text-info">Shipping Details:</span>
										</h4>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">Name</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.Name" class="form-control" />
											<span asp-validation-for="Order.Name" class="text-danger"></span>
										</div>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">Phone</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.PhoneNumber" class="form-control" />
											<span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
										</div>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">Street Address</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.StreetAddress" class="form-control" />
											<span asp-validation-for="Order.StreetAddress" class="text-danger"></span>
										</div>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">City</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.City" class="form-control" />
											<span asp-validation-for="Order.City" class="text-danger"></span>
										</div>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">State</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.State" class="form-control" />
											<span asp-validation-for="Order.State" class="text-danger"></span>
										</div>
									</div>
									<div class="row my-3">
										<div class="col-3">
											<label class="form-label fw-bold">Postal Code</label>
										</div>
										<div class="col-9">
											<input asp-for="Order.PostalCode" class="form-control" />
											<span asp-validation-for="Order.PostalCode" class="text-danger"></span>
										</div>
									</div>
								</div>
								<div class="col-12 col-lg-5 offset-lg-1">
									<h4 class="d-flex justify-content-between align-items-center mb-4">
										<span class="text-info">Order Summary:</span>
									</h4>
									<ul class="list-group mb-4">
										@foreach (var details in Model.ShoppingCartList)
										{
											<li class="list-group-item d-flex justify-content-between py-3">
												<div>
													<h6 class="my-0">@details.Product.Title</h6>
													<small class="text-muted">Quantity: @details.Count</small>
												</div>
												<span class="text-muted">@((details.Price * details.Count).ToString("c")) </span>
											</li>
										}

										<li class="list-group-item d-flex justify-content-between bg-light py-3">
											<small class="text-info">Total (USD)</small>
											<strong class="text-info">@Model.Order.OrderTotal.ToString("c")</strong>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<div class="card-footer bg-white border-0 p-4">
						<div class="row">
							<div class="col-12 col-md-8 pt-2">
								<p style="color:maroon; font-size:14px;" class="mb-3">
									Estimate Arrival Date:
									@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
								</p>
							</div>
							<div class="col-12 col-md-4">
								<div class="mt-4 d-flex justify-content-end">
									<div class="me-3">
										<a asp-action="Index" class="btn btn-secondary">
											<i class="bi bi-arrow-left"></i> Back to Cart
										</a>
									</div>
									<div>
										<button asp-action="PlaceOrder" type="submit" value="Place Order" class="btn btn-primary">
											<i class="bi bi-credit-card"></i> Place Order
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}